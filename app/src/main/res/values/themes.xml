<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Task_Project" parent="android:Theme.Material.Light.NoActionBar" />

    <style name="Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/normal_margin</item>
        <item name="android:layout_marginEnd">@dimen/normal_margin</item>
        <item name="android:padding">@dimen/normal_padding</item>

    </style>
    <style name="Input_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/input_text</item>
        <item name="android:padding">@dimen/normal_padding</item>
        <item name="android:layout_marginStart">@dimen/normal_margin</item>
        <item name="android:layout_marginEnd">@dimen/normal_margin</item>
    </style>
    <style name="Page_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:padding">@dimen/normal_padding</item>
        <item name="android:layout_marginTop">@dimen/normal_margin</item>
    </style>
</resources>